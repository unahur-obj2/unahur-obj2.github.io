---
import AsideMenu from '@components/AsideMenu.astro'
import DefaultLayout from './DefaultLayout.astro'

const currentUrl = Astro.url.pathname
let semanas = []

if (currentUrl.includes('/comision-1-3-viernes/')) {
	semanas = await Astro.glob('../pages/comision-1-3-viernes/*.md')
} else if (currentUrl.includes('/comision-2-4-miercoles/')) {
	semanas = await Astro.glob('../pages/comision-2-4-miercoles/*.md')
} else if (currentUrl.includes('/cursada2025C1/')) {
	semanas = await Astro.glob('../pages/cursada2025C1/*.md')
} else {
	try {
		semanas = await Astro.glob('../pages/comision-1-3-viernes/*.md')
	} catch (e) {
		semanas = []
	}
}

// Solo mostramos las clases de las semanas cuya fecha de inicio sea inferior a la fecha actual
// por un tema de compatibilidad, tambiÃ©n mostramos las clases que no especifican fecha de inicio
semanas = semanas.reverse().filter((semana) => {
	const inicio = new Date(semana.frontmatter.inicio)
	const hoy = new Date()
	return hoy >= inicio || !semana.frontmatter.inicio
})

const { title } = Astro.props
---

<DefaultLayout title={title}>
	<div class="flex">
		<aside
			class="animate-on-load sticky left-0 top-0 h-screen w-48 rounded-lg bg-gradient-to-t from-slate-200 to-[--background] dark:from-zinc-800 dark:to-[--background]"
			data-animate="fade-in-left">
			<AsideMenu
				title="Semanas"
				data={semanas}
			/>
		</aside>
		<div
			class="animate-on-load sm:m-auto"
			data-animate="fade-in-right">
			<slot />
		</div>
	</div>
</DefaultLayout>

<style>
	@media (max-width: 775px) {
		aside {
			display: none;
		}
	}
	@media (max-width: 1200px) {
		aside {
			min-width: 8rem;
		}
	}
</style>

---
import DefaultLayout from '@/layouts/DefaultLayout.astro'
import { Icon } from 'astro-icon/components'
import CardSecciones from '@/components/CardSecciones.astro'
import SeccionListaCopyCode from '@/components/SeccionListaCopyCode.astro'
import Separador from '@/components/Separador.astro'
import Git from '../content/data/Git.json'
import patrones from '../content/data/Patrones.json'
import varios from '../content/data/varios.json'
import uml from '../content/data/Uml.json'
import software from '../content/data/Programas.json'

const elementosComunes = await Astro.glob('../content/docs/commandos-git.md')
const { comandosBasicGit } = elementosComunes[0].frontmatter

const comportamientoFile = await Astro.glob(
	'../content/docs/patronesComportamiento.md'
)
const estructuralesFile = await Astro.glob(
	'../content/docs/patronesEstructurales.md'
)

const programasFile = await Astro.glob('../content/docs/programas.md')

const { comportamiento } = comportamientoFile[0].frontmatter
const { estructurales } = estructuralesFile[0].frontmatter
const { programas } = programasFile[0].frontmatter
---

<DefaultLayout
	title="Material - Objetos II"
	description="Universidad Nacional de Hurlingham, material de Programación con Objetos II"
	author="Objetos II">
	<section
		class="relative overflow-hidden bg-gradient-to-br from-unahur-primary to-unahur-secondary py-16 text-white">
		<div class="absolute inset-0 opacity-10">
			<div
				class="absolute left-10 top-10 h-24 w-24 animate-pulse rounded-full bg-white">
			</div>
			<div
				class="absolute bottom-10 right-10 h-16 w-16 animate-bounce rounded-full bg-unahur-accent">
			</div>
		</div>

		<div class="container relative z-10 mx-auto px-4">
			<div class="mx-auto max-w-4xl text-center">
				<div class="mb-6 flex justify-center">
					<div class="rounded-2xl bg-white/20 p-4 backdrop-blur-sm">
						<svg
							class="h-12 w-12 text-white"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24">
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
							></path>
						</svg>
					</div>
				</div>

				<h1
					class="mb-4 bg-gradient-to-r from-white to-blue-100 bg-clip-text text-4xl font-bold text-transparent md:text-6xl">
					Material
				</h1>

				<p class="text-lg leading-relaxed text-blue-100 md:text-xl">
					Recursos académicos y documentación técnica para Programación con
					Objetos II
				</p>
			</div>
		</div>
	</section>

	<div
		class="flex min-h-screen flex-col bg-gray-50 dark:bg-gray-900 lg:flex-row">
		<aside
			class="overflow-y-auto border-r border-gray-200 bg-white shadow-xl dark:border-gray-700 dark:bg-gray-800 lg:sticky lg:top-0 lg:h-screen lg:w-80">
			<div class="p-6">
				<h2
					class="mb-6 flex items-center gap-2 text-xl font-bold text-gray-800 dark:text-white">
					<svg
						class="h-6 w-6 text-unahur-primary"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24">
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
						></path>
					</svg>
					Índice de Contenidos
				</h2>

				<nav class="space-y-4">
					<div
						class="overflow-hidden rounded-lg border border-gray-200 dark:border-gray-600">
						<h3
							class="bg-unahur-primary px-4 py-3 text-sm font-semibold text-white">
							Patrones de Diseño
						</h3>
						<div class="space-y-2 p-3">
							{
								patrones.map((patron) => (
									<a
										href={patron.url}
										class="block rounded px-2 py-1 text-sm text-gray-600 transition-colors duration-200 hover:bg-gray-100 hover:text-unahur-primary dark:text-gray-300 dark:hover:bg-gray-700 dark:hover:text-unahur-accent">
										{patron.title}
									</a>
								))
							}
						</div>
					</div>

					<div
						class="overflow-hidden rounded-lg border border-gray-200 dark:border-gray-600">
						<h3
							class="bg-unahur-secondary px-4 py-3 text-sm font-semibold text-white">
							UML
						</h3>
						<div class="space-y-2 p-3">
							{
								uml.map((item) => (
									<a
										href={item.url}
										class="block rounded px-2 py-1 text-sm text-gray-600 transition-colors duration-200 hover:bg-gray-100 hover:text-unahur-primary dark:text-gray-300 dark:hover:bg-gray-700 dark:hover:text-unahur-accent">
										{item.title}
									</a>
								))
							}
						</div>
					</div>

					<div
						class="overflow-hidden rounded-lg border border-gray-200 dark:border-gray-600">
						<h3
							class="bg-unahur-accent px-4 py-3 text-sm font-semibold text-white">
							Varios
						</h3>
						<div class="space-y-2 p-3">
							{
								varios.map((item) => (
									<a
										href={item.url}
										class="block rounded px-2 py-1 text-sm text-gray-600 transition-colors duration-200 hover:bg-gray-100 hover:text-unahur-primary dark:text-gray-300 dark:hover:bg-gray-700 dark:hover:text-unahur-accent">
										{item.title}
									</a>
								))
							}
						</div>
					</div>

					<div
						class="overflow-hidden rounded-lg border border-gray-200 dark:border-gray-600">
						<h3 class="bg-gray-600 px-4 py-3 text-sm font-semibold text-white">
							Git
						</h3>
						<div class="space-y-2 p-3">
							{
								Git.map((item) => (
									<a
										href={item.url}
										class="block rounded px-2 py-1 text-sm text-gray-600 transition-colors duration-200 hover:bg-gray-100 hover:text-unahur-primary dark:text-gray-300 dark:hover:bg-gray-700 dark:hover:text-unahur-accent">
										{item.title}
									</a>
								))
							}
						</div>
					</div>

					<div
						class="overflow-hidden rounded-lg border border-gray-200 dark:border-gray-600">
						<h3 class="bg-green-600 px-4 py-3 text-sm font-semibold text-white">
							Programas
						</h3>
						<div class="space-y-2 p-3">
							{
								software.map((item) => (
									<a
										href={item.url}
										class="block rounded px-2 py-1 text-sm text-gray-600 transition-colors duration-200 hover:bg-gray-100 hover:text-unahur-primary dark:text-gray-300 dark:hover:bg-gray-700 dark:hover:text-unahur-accent">
										{item.title}
									</a>
								))
							}
						</div>
					</div>
				</nav>
			</div>
		</aside>

		<main class="flex-1 p-6 lg:p-8">
			<div class="mx-auto max-w-4xl space-y-8">
				<section
					id="patrones"
					class="rounded-2xl border border-gray-200 bg-white p-8 shadow-xl dark:border-gray-700 dark:bg-gray-800">
					<div class="mb-6 flex items-center gap-3">
						<div class="rounded-xl bg-unahur-primary p-3 text-white">
							<svg
								class="h-6 w-6"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24">
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
								></path>
							</svg>
						</div>
						<h2
							class="bg-gradient-to-r from-unahur-primary to-unahur-secondary bg-clip-text text-3xl font-bold text-transparent">
							Patrones de Diseño
						</h2>
					</div>

					<div class="prose prose-lg dark:prose-invert max-w-none">
						<p class="mb-6 leading-relaxed text-gray-700 dark:text-gray-300">
							Un patrón de diseño es una <strong
								class="text-unahur-primary dark:text-unahur-accent"
								>solución general y reutilizable</strong
							> para un problema común en el diseño de software. No es un código
							específico que puedas copiar y pegar, sino una plantilla o guía que
							describe cómo resolver un problema de diseño de software de manera
							eficiente y mantenible.
						</p>

						<div
							class="mb-6 rounded-r-lg border-l-4 border-unahur-primary bg-blue-50 p-6 dark:bg-blue-900/20">
							<h3
								class="mb-4 text-lg font-semibold text-unahur-primary dark:text-unahur-accent">
								Características de los patrones de diseño:
							</h3>
							<div class="grid gap-4 md:grid-cols-2">
								<div class="flex items-start gap-3">
									<div
										class="mt-0.5 flex h-6 w-6 flex-shrink-0 items-center justify-center rounded-full bg-unahur-primary text-sm font-bold text-white">
										R
									</div>
									<div>
										<strong>Reutilizable</strong>: Pueden aplicarse en
										diferentes contextos y proyectos
									</div>
								</div>
								<div class="flex items-start gap-3">
									<div
										class="mt-0.5 flex h-6 w-6 flex-shrink-0 items-center justify-center rounded-full bg-unahur-primary text-sm font-bold text-white">
										P
									</div>
									<div>
										<strong>Probado</strong>: Han sido validados y refinados a
										través de su uso en múltiples situaciones
									</div>
								</div>
								<div class="flex items-start gap-3">
									<div
										class="mt-0.5 flex h-6 w-6 flex-shrink-0 items-center justify-center rounded-full bg-unahur-primary text-sm font-bold text-white">
										A
									</div>
									<div>
										<strong>Abstracción</strong>: No son soluciones concretas,
										sino descripciones de cómo resolver un problema
									</div>
								</div>
								<div class="flex items-start gap-3">
									<div
										class="mt-0.5 flex h-6 w-6 flex-shrink-0 items-center justify-center rounded-full bg-unahur-primary text-sm font-bold text-white">
										L
									</div>
									<div>
										<strong>Lenguaje común</strong>: Proporcionan un vocabulario
										compartido entre desarrolladores
									</div>
								</div>
							</div>
						</div>

						<div class="mb-8 grid gap-6 md:grid-cols-3">
							<div
								class="rounded-xl border border-green-200 bg-gradient-to-br from-green-50 to-emerald-50 p-6 dark:border-green-800 dark:from-green-900/20 dark:to-emerald-900/20">
								<h4
									class="mb-3 flex items-center gap-2 font-bold text-green-700 dark:text-green-300">
									<svg
										class="h-5 w-5"
										fill="none"
										stroke="currentColor"
										viewBox="0 0 24 24">
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M12 6v6m0 0v6m0-6h6m-6 0H6"
										></path>
									</svg>
									Creacionales
								</h4>
								<p class="text-sm text-green-600 dark:text-green-400">
									Se ocupan de la creación de objetos de manera controlada
								</p>
								<div class="mt-3 space-y-1">
									<div class="text-xs text-green-700 dark:text-green-300">
										• Factory Method
									</div>
									<div class="text-xs text-green-700 dark:text-green-300">
										• Abstract Factory
									</div>
									<div class="text-xs text-green-700 dark:text-green-300">
										• Builder
									</div>
									<div class="text-xs text-green-700 dark:text-green-300">
										• Prototype
									</div>
									<div class="text-xs text-green-700 dark:text-green-300">
										• Singleton
									</div>
								</div>
							</div>

							<div
								class="rounded-xl border border-blue-200 bg-gradient-to-br from-blue-50 to-indigo-50 p-6 dark:border-blue-800 dark:from-blue-900/20 dark:to-indigo-900/20">
								<h4
									class="mb-3 flex items-center gap-2 font-bold text-blue-700 dark:text-blue-300">
									<svg
										class="h-5 w-5"
										fill="none"
										stroke="currentColor"
										viewBox="0 0 24 24">
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
										></path>
									</svg>
									Estructurales
								</h4>
								<p class="text-sm text-blue-600 dark:text-blue-400">
									Se ocupan de la composición de clases y objetos
								</p>
								<div class="mt-3 space-y-1">
									{
										estructurales &&
											estructurales.map((patron) => (
												<div class="text-xs text-blue-700 dark:text-blue-300">
													• {patron.titulo}
												</div>
											))
									}
								</div>
							</div>

							<div
								class="rounded-xl border border-purple-200 bg-gradient-to-br from-purple-50 to-violet-50 p-6 dark:border-purple-800 dark:from-purple-900/20 dark:to-violet-900/20">
								<h4
									class="mb-3 flex items-center gap-2 font-bold text-purple-700 dark:text-purple-300">
									<svg
										class="h-5 w-5"
										fill="none"
										stroke="currentColor"
										viewBox="0 0 24 24">
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M13 10V3L4 14h7v7l9-11h-7z"
										></path>
									</svg>
									Comportamiento
								</h4>
								<p class="text-sm text-purple-600 dark:text-purple-400">
									Se ocupan de la comunicación entre objetos
								</p>
								<div class="mt-3 space-y-1">
									{
										comportamiento &&
											comportamiento.map((patron) => (
												<div class="text-xs text-purple-700 dark:text-purple-300">
													• {patron.titulo}
												</div>
											))
									}
								</div>
							</div>
						</div>
					</div>
				</section>

				<section
					id="varios"
					class="rounded-2xl border border-gray-200 bg-white p-8 shadow-xl dark:border-gray-700 dark:bg-gray-800">
					<div class="mb-6 flex items-center gap-3">
						<div class="rounded-xl bg-unahur-accent p-3 text-white">
							<svg
								class="h-6 w-6"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24">
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
								></path>
							</svg>
						</div>
						<h2
							class="bg-gradient-to-r from-unahur-accent to-unahur-primary bg-clip-text text-3xl font-bold text-transparent">
							Varios
						</h2>
					</div>

					<CardSecciones
						id={'excepciones'}
						title="Excepciones">
						<article id="links">
							<p
								id={'parrafoexcepciones'}
								class="flex items-center">
								Intro a manejo de errores con excepciones en Java
							</p>
							<a
								id={'linkexcepciones'}
								href="https://docs.google.com/document/d/1Yy4YA3E_Gsuh7kcxbdRSpMsQat5PArnOEZWdnggzq7g/edit?usp=sharing"
								target="_blank"
								class="rounded-md bg-slate-300 hover:bg-slate-400 dark:bg-zinc-900 dark:hover:bg-zinc-700"
								>Ir al Apunte<Icon name="ion:arrow-up-right-box-outline" /></a
							>
						</article>
					</CardSecciones>

					<CardSecciones
						id={'tdd'}
						title="Test Driven Development">
						<p>
							Es una técnica de programación, por la cual el código se escribe
							para satisfacer pruebas que ponen en evidencia la necesidad de
							dicho código. Es por ello que se llama "desarrollo conducido por
							las pruebas"
						</p>
						<ul>
							<li>
								- Sólo se escribe nuevo código cuando una prueba ha fallado
							</li>
							<li>- Se elimina la duplicación.</li>
						</ul>
						<Separador />

						<article id="links">
							<p
								id={'parrafotdd'}
								class="flex items-center">
								Intro a Test Driven Development
							</p>
							<a
								id={'linktdd'}
								href="https://docs.google.com/document/d/1lCMGpzsKqLJHOZH8WlJOyRUOONLMrp-0_Iv8-tWX5es/edit?usp=sharing"
								target="_blank"
								class="rounded-md bg-slate-300 hover:bg-slate-400 dark:bg-zinc-900 dark:hover:bg-zinc-700"
								>Ir al Apunte<Icon name="ion:arrow-up-right-box-outline" /></a
							>
						</article>
					</CardSecciones>
				</section>

				<section
					id="git"
					class="rounded-2xl border border-gray-200 bg-white p-8 shadow-xl dark:border-gray-700 dark:bg-gray-800">
					<div class="mb-6 flex items-center gap-3">
						<div class="rounded-xl bg-gray-600 p-3 text-white">
							<svg
								class="h-6 w-6"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24">
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
								></path>
							</svg>
						</div>
						<h2
							class="bg-gradient-to-r from-gray-600 to-gray-800 bg-clip-text text-3xl font-bold text-transparent">
							Git
						</h2>
					</div>

					<CardSecciones title="Git">
						<p>
							Git es un sistema de control de versiones distribuido, es decir
							que todo el historial de nuestro proyecto queda guardado en
							nuestro repositorio.
						</p>
						<Separador />

						<article id="links">
							<SeccionListaCopyCode
								title="Configuración inicial"
								lista={comandosBasicGit}
								textKey="comando"
								copyKey="comando"
							/>
						</article>

						<Separador />

						<div class="mt-6 grid gap-6 md:grid-cols-2">
							<div class="rounded-lg bg-gray-50 p-4 dark:bg-gray-700">
								<h4 class="mb-3 font-bold text-gray-700 dark:text-gray-300">
									Recursos adicionales
								</h4>
								<div class="space-y-3">
									<div>
										<p class="mb-2 text-sm text-gray-600 dark:text-gray-400">
											Tutorial interactivo de Git (Funciona sin conexión a
											internet, hay que instalarlo)
										</p>
										<a
											href="https://github.com/jlord/git-it-electron"
											target="_blank"
											class="inline-flex items-center gap-2 rounded bg-gray-600 px-3 py-2 text-sm text-white transition-colors hover:bg-gray-700">
											<svg
												class="h-4 w-4"
												fill="none"
												stroke="currentColor"
												viewBox="0 0 24 24">
												<path
													stroke-linecap="round"
													stroke-linejoin="round"
													stroke-width="2"
													d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
												></path>
											</svg>
											Ver recurso
										</a>
									</div>
									<div>
										<p class="mb-2 text-sm text-gray-600 dark:text-gray-400">
											Machete de comandos de Git (Resumen de los comandos más
											utilizados)
										</p>
										<a
											href="/pdf/ComandosBasicosDeGit.pdf"
											target="_blank"
											class="inline-flex items-center gap-2 rounded bg-gray-600 px-3 py-2 text-sm text-white transition-colors hover:bg-gray-700">
											<svg
												class="h-4 w-4"
												fill="none"
												stroke="currentColor"
												viewBox="0 0 24 24">
												<path
													stroke-linecap="round"
													stroke-linejoin="round"
													stroke-width="2"
													d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
												></path>
											</svg>
											Descargar PDF
										</a>
									</div>
								</div>
							</div>

							<div class="rounded-lg bg-blue-50 p-4 dark:bg-blue-900/20">

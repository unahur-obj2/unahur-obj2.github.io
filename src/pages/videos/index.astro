---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import VideosDeSemana from '@/components/VideosDeSemana.astro'
const videosMd = await Astro.glob('./videos.md')
---

<DefaultLayout title="Videos">
	<div class="container">
		<h3
			class="animate-on-load mb-10 text-center text-3xl sm:text-5xl"
			data-animate="fade-in-down">
			Videos
		</h3>
		<div
			class="animate-on-load"
			data-animate="fade-in-up">
			{videosMd.map((video) => <VideosDeSemana videos={video.frontmatter} />)}
		</div>
	</div>
</DefaultLayout>

<style lang="scss">
	ul {
		display: grid;
		grid-template-columns: 1fr;
		grid-gap: 4rem;

		@media (min-width: 550px) {
			grid-template-columns: repeat(2, 1fr);
			grid-gap: 2rem;
		}

		@media (min-width: 950px) {
			grid-template-columns: repeat(3, 1fr);
		}
	}
</style>

---
import DefaultLayout from '@/layouts/DefaultLayout.astro'
import CardSecciones from '@/components/CardSecciones.astro'
import SeccionListaCopyCode from '@/components/SeccionListaCopyCode.astro'
import Separador from '@/components/Separador.astro'
import { Icon } from 'astro-icon/components'
import Git from '../content/data/Git.json'
import patrones from '../content/data/Patrones.json'
import varios from '../content/data/varios.json'
import uml from '../content/data/Uml.json'
import software from '../content/data/Programas.json'

const elementosComunes = await Astro.glob('../content/docs/commandos-git.md')
const { comandosBasicGit } = elementosComunes[0].frontmatter

const comportamientoFile = await Astro.glob(
	'../content/docs/patronesComportamiento.md'
)
const estructuralesFile = await Astro.glob(
	'../content/docs/patronesEstructurales.md'
)

const programasFile = await Astro.glob('../content/docs/programas.md')

const { comportamiento } = comportamientoFile[0].frontmatter
const { estructurales } = estructuralesFile[0].frontmatter
const { programas } = programasFile[0].frontmatter
---

<DefaultLayout
	title="Material - Objetos II"
	description="Universidad Nacional de Hurlingham, material de Programación con Objetos II"
	author="Objetos II">
	<section
		class="hero-section relative overflow-hidden bg-gradient-to-br from-unahur-primary to-unahur-secondary py-12 text-white sm:py-16 xl:py-20">
		<div class="absolute inset-0">
			<div
				class="absolute left-10 top-20 h-32 w-32 animate-pulse rounded-full bg-gradient-to-r from-white/30 to-transparent opacity-30 blur-xl">
			</div>
			<div
				class="absolute bottom-20 right-10 h-24 w-24 animate-bounce rounded-full bg-gradient-to-r from-unahur-accent/40 to-transparent opacity-40 blur-xl">
			</div>
			<div
				class="slow absolute left-1/2 top-1/2 h-40 w-40 animate-spin rounded-full bg-gradient-to-r from-white/20 to-transparent opacity-20 blur-2xl">
			</div>
		</div>

		<div
			class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,.1)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,.1)_1px,transparent_1px)] bg-[size:100px_100px] opacity-20">
		</div>

		<div class="container relative z-10 mx-auto px-4">
			<div class="mx-auto max-w-5xl text-center">
				<div class="mb-8 flex justify-center">
					<div class="relative">
						<div
							class="absolute inset-0 animate-pulse rounded-full bg-white/20 blur">
						</div>
						<div
							class="animate-on-load relative rounded-full bg-white/20 p-6 backdrop-blur-sm">
							<svg
								class="h-16 w-16 text-white"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24">
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="1.5"
									d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z"
								></path>
							</svg>
						</div>
					</div>
				</div>

				<h1
					class="animate-on-load mb-6 bg-gradient-to-r from-white via-blue-100 to-blue-200 bg-clip-text text-3xl font-extrabold leading-tight text-transparent sm:text-5xl md:text-7xl">
					Material Académico
				</h1>

				<p
					class="animate-on-load mx-auto mb-8 max-w-3xl text-lg leading-relaxed text-blue-100 sm:text-xl md:text-2xl">
					Recursos completos, patrones de diseño y herramientas esenciales para
					<span class="font-semibold text-white"
						>Programación con Objetos II</span
					>
				</p>

				<div
					class="animate-on-load flex flex-wrap justify-center gap-4 text-sm">
					<span
						class="rounded-full border border-white/20 bg-white/10 px-4 py-2 backdrop-blur-sm"
						>Patrones de Diseño</span
					>
					<span
						class="rounded-full border border-white/20 bg-white/10 px-4 py-2 backdrop-blur-sm"
						>Control de Versiones</span
					>
					<span
						class="rounded-full border border-white/20 bg-white/10 px-4 py-2 backdrop-blur-sm"
						>Testing</span
					>
					<span
						class="rounded-full border border-white/20 bg-white/10 px-4 py-2 backdrop-blur-sm"
						>UML</span
					>
				</div>
			</div>
		</div>
	</section>

	<div
		class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900">
		<div class="xl:flex">
			<aside
				class="sticky left-0 top-0 hidden h-screen w-80 border-r border-slate-200/50 bg-white/80 shadow-2xl backdrop-blur-xl dark:border-slate-700/50 dark:bg-slate-800/80 xl:block">
				<div class="h-full space-y-6 overflow-y-auto p-6">
					<div class="mb-8 text-center">
						<h2
							class="bg-gradient-to-r from-unahur-primary to-unahur-accent bg-clip-text text-2xl font-bold text-transparent">
							Navegación
						</h2>
						<div
							class="mx-auto mt-2 h-1 w-16 rounded-full bg-gradient-to-r from-unahur-primary to-unahur-accent">
						</div>
					</div>

					<div class="space-y-4">
						<div class="group">
							<div
								class="relative overflow-hidden rounded-xl bg-gradient-to-br from-purple-600 to-blue-600 p-4 transition-all duration-300 hover:scale-[1.02] hover:shadow-xl">
								<div
									class="absolute inset-0 bg-gradient-to-br from-white/10 to-transparent">
								</div>
								<div class="relative z-10">
									<div class="mb-3 flex items-center">
										<svg
											class="mr-2 h-5 w-5 text-white"
											fill="none"
											stroke="currentColor"
											viewBox="0 0 24 24">
											<path
												stroke-linecap="round"
												stroke-linejoin="round"
												stroke-width="2"
												d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
											></path>
										</svg>
										<h3 class="text-sm font-bold text-white">
											Patrones de Diseño
										</h3>
									</div>
									<div class="space-y-1">
										{
											patrones.map((patron) => (
												<a
													href={patron.url}
													class="block rounded-lg border border-transparent px-3 py-1.5 text-xs text-blue-100 transition-all duration-200 hover:border-white/30 hover:bg-white/20 hover:text-white">
													{patron.title}
												</a>
											))
										}
									</div>
								</div>
							</div>
						</div>

						<div class="group">
							<div
								class="relative overflow-hidden rounded-xl bg-gradient-to-br from-emerald-600 to-teal-600 p-4 transition-all duration-300 hover:scale-[1.02] hover:shadow-xl">
								<div
									class="absolute inset-0 bg-gradient-to-br from-white/10 to-transparent">
								</div>
								<div class="relative z-10">
									<div class="mb-3 flex items-center">
										<svg
											class="mr-2 h-5 w-5 text-white"
											fill="none"
											stroke="currentColor"
											viewBox="0 0 24 24">
											<path
												stroke-linecap="round"
												stroke-linejoin="round"
												stroke-width="2"
												d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
											></path>
										</svg>
										<h3 class="text-sm font-bold text-white">UML</h3>
									</div>
									<div class="space-y-1">
										{
											uml.map((item) => (
												<a
													href={item.url}
													class="block rounded-lg border border-transparent px-3 py-1.5 text-xs text-emerald-100 transition-all duration-200 hover:border-white/30 hover:bg-white/20 hover:text-white">
													{item.title}
												</a>
											))
										}
									</div>
								</div>
							</div>
						</div>

						<div class="group">
							<div
								class="relative overflow-hidden rounded-xl bg-gradient-to-br from-amber-600 to-orange-600 p-4 transition-all duration-300 hover:scale-[1.02] hover:shadow-xl">
								<div
									class="absolute inset-0 bg-gradient-to-br from-white/10 to-transparent">
								</div>
								<div class="relative z-10">
									<div class="mb-3 flex items-center">
										<svg
											class="mr-2 h-5 w-5 text-white"
											fill="none"
											stroke="currentColor"
											viewBox="0 0 24 24">
											<path
												stroke-linecap="round"
												stroke-linejoin="round"
												stroke-width="2"
												d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
											></path>
										</svg>
										<h3 class="text-sm font-bold text-white">Varios</h3>
									</div>
									<div class="space-y-1">
										{
											varios.map((item) => (
												<a
													href={item.url}
													class="block rounded-lg border border-transparent px-3 py-1.5 text-xs text-amber-100 transition-all duration-200 hover:border-white/30 hover:bg-white/20 hover:text-white">
													{item.title}
												</a>
											))
										}
									</div>
								</div>
							</div>
						</div>

						<div class="group">
							<div
								class="relative overflow-hidden rounded-xl bg-gradient-to-br from-slate-700 to-slate-800 p-4 transition-all duration-300 hover:scale-[1.02] hover:shadow-xl">
								<div
									class="absolute inset-0 bg-gradient-to-br from-white/10 to-transparent">
								</div>
								<div class="relative z-10">
									<div class="mb-3 flex items-center">
										<svg
											class="mr-2 h-5 w-5 text-white"
											fill="none"
											stroke="currentColor"
											viewBox="0 0 24 24">
											<path
												stroke-linecap="round"
												stroke-linejoin="round"
												stroke-width="2"
												d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
											></path>
										</svg>
										<h3 class="text-sm font-bold text-white">Git</h3>
									</div>
									<div class="space-y-1">
										{
											Git.map((item) => (
												<a
													href={item.url}
													class="block rounded-lg border border-transparent px-3 py-1.5 text-xs text-slate-200 transition-all duration-200 hover:border-white/30 hover:bg-white/20 hover:text-white">
													{item.title}
												</a>
											))
										}
									</div>
								</div>
							</div>
						</div>

						<div class="group">
							<div
								class="relative overflow-hidden rounded-xl bg-gradient-to-br from-rose-600 to-pink-600 p-4 transition-all duration-300 hover:scale-[1.02] hover:shadow-xl">
								<div
									class="absolute inset-0 bg-gradient-to-br from-white/10 to-transparent">
								</div>
								<div class="relative z-10">
									<div class="mb-3 flex items-center">
										<svg
											class="mr-2 h-5 w-5 text-white"
											fill="none"
											stroke="currentColor"
											viewBox="0 0 24 24">
											<path
												stroke-linecap="round"
												stroke-linejoin="round"
												stroke-width="2"
												d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
											></path>
										</svg>
										<h3 class="text-sm font-bold text-white">
											Software Requerido
										</h3>
									</div>
									<div class="space-y-1">
										{
											software.map((item) => (
												<a
													href={item.url}
													class="block rounded-lg border border-transparent px-3 py-1.5 text-xs text-rose-100 transition-all duration-200 hover:border-white/30 hover:bg-white/20 hover:text-white">
													{item.title}
												</a>
											))
										}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</aside>

			<section class="w-full p-4 sm:p-6 xl:flex-1 xl:p-8">
				<div class="mx-auto max-w-6xl space-y-6 sm:space-y-8 xl:space-y-10">
					<div class="mb-6 sm:mb-8 xl:hidden">
						<div
							class="rounded-2xl border border-slate-200/50 bg-white/90 p-4 shadow-xl backdrop-blur-xl dark:border-slate-700/50 dark:bg-slate-800/90 sm:p-6">
							<h3
								class="mb-3 text-base font-bold text-slate-800 dark:text-white sm:text-lg">
								Navegación Rápida
							</h3>
							<div class="grid grid-cols-2 gap-2 sm:grid-cols-3 sm:gap-3">
								<a
									href="#comportamiento"
									class="rounded-lg bg-purple-100 px-2 py-2 text-xs font-medium text-purple-800 transition-colors hover:bg-purple-200 dark:bg-purple-900/50 dark:text-purple-200 dark:hover:bg-purple-800/50 sm:px-3 sm:text-sm"
									>Comportamiento</a
								>
								<a
									href="#estructurales"
									class="rounded-lg bg-blue-100 px-2 py-2 text-xs font-medium text-blue-800 transition-colors hover:bg-blue-200 dark:bg-blue-900/50 dark:text-blue-200 dark:hover:bg-blue-800/50 sm:px-3 sm:text-sm"
									>Estructurales</a
								>
								<a
									href="#guia"
									class="rounded-lg bg-emerald-100 px-2 py-2 text-xs font-medium text-emerald-800 transition-colors hover:bg-emerald-200 dark:bg-emerald-900/50 dark:text-emerald-200 dark:hover:bg-emerald-800/50 sm:px-3 sm:text-sm"
									>UML Guía</a
								>
								<a
									href="#disenio"
									class="rounded-lg bg-blue-100 px-2 py-2 text-xs font-medium text-blue-800 transition-colors hover:bg-blue-200 dark:bg-blue-900/50 dark:text-blue-200 dark:hover:bg-blue-800/50 sm:px-3 sm:text-sm"
									>UML Diseño</a
								>
								<a
									href="#excepciones"
									class="rounded-lg bg-emerald-100 px-2 py-2 text-xs font-medium text-emerald-800 transition-colors hover:bg-emerald-200 dark:bg-emerald-900/50 dark:text-emerald-200 dark:hover:bg-emerald-800/50 sm:px-3 sm:text-sm"
									>Excepciones</a
								>
								<a
									href="#tdd"
									class="rounded-lg bg-amber-100 px-2 py-2 text-xs font-medium text-amber-800 transition-colors hover:bg-amber-200 dark:bg-amber-900/50 dark:text-amber-200 dark:hover:bg-amber-800/50 sm:px-3 sm:text-sm"
									>TDD</a
								>
								<a
									href="#maven"
									class="rounded-lg bg-orange-100 px-2 py-2 text-xs font-medium text-orange-800 transition-colors hover:bg-orange-200 dark:bg-orange-900/50 dark:text-orange-200 dark:hover:bg-orange-800/50 sm:px-3 sm:text-sm"
									>Maven</a
								>
								<a
									href="#git"
									class="rounded-lg bg-slate-100 px-2 py-2 text-xs font-medium text-slate-800 transition-colors hover:bg-slate-200 dark:bg-slate-700 dark:text-slate-200 dark:hover:bg-slate-600 sm:px-3 sm:text-sm"
									>Git</a
								>
								<a
									href="#programas"
									class="rounded-lg bg-rose-100 px-2 py-2 text-xs font-medium text-rose-800 transition-colors hover:bg-rose-200 dark:bg-rose-900/50 dark:text-rose-200 dark:hover:bg-rose-800/50 sm:px-3 sm:text-sm"
									>Software</a
								>
							</div>
						</div>
					</div>

					<div class="group relative">
						<div
							class="absolute -inset-1 rounded-3xl bg-gradient-to-r from-purple-600 to-blue-600 opacity-20 blur transition-opacity group-hover:opacity-30">
						</div>
						<div
							class="hover:shadow-3xl relative rounded-2xl border border-slate-200/50 bg-white/90 p-4 shadow-2xl backdrop-blur-xl transition-all duration-300 dark:border-slate-700/50 dark:bg-slate-800/90 sm:p-6 xl:p-8">
							<CardSecciones
								id={'comportamiento'}
								title="Patrones de comportamiento">
								<div class="mb-6 flex items-start gap-4">
									<div
										class="rounded-xl bg-gradient-to-br from-purple-500 to-blue-500 p-3 shadow-lg">
										<svg
											class="h-6 w-6 text-white"
											fill="none"
											stroke="currentColor"
											viewBox="0 0 24 24">
											<path
												stroke-linecap="round"
												stroke-linejoin="round"
												stroke-width="2"
												d="M13 10V3L4 14h7v7l9-11h-7z"
											></path>
										</svg>
									</div>
									<div>
										<p
											class="leading-relaxed text-slate-700 dark:text-slate-300">
											Los patrones de comportamiento se centran en los
											algoritmos y en la asignación de responsabilidades entre
											los objetos. Estos patrones no solo describen objetos o
											clases, sino también los patrones de comunicación entre
											ellos.
										</p>
									</div>
								</div>
								<Separador />

								<article id="links">
									<SeccionListaCopyCode
										title="Patrones de comportamiento"
										lista={comportamiento}
										textKey="titulo"
										copyKey="codigo"
									/>
								</article>
							</CardSecciones>
						</div>
					</div>

					<div class="group relative">
						<div
							class="absolute -inset-1 rounded-3xl bg-gradient-to-r from-blue-600 to-cyan-600 opacity-20 blur transition-opacity group-hover:opacity-30">
						</div>
						<div
							class="hover:shadow-3xl relative rounded-2xl border border-slate-200/50 bg-white/90 p-4 shadow-2xl backdrop-blur-xl transition-all duration-300 dark:border-slate-700/50 dark:bg-slate-800/90 sm:p-6 xl:p-8">
							<CardSecciones
								id={'estructurales'}
								title="Patrones estructurales">
								<div class="mb-6 flex items-start gap-4">
									<div
										class="rounded-xl bg-gradient-to-br from-blue-500 to-cyan-500 p-3 shadow-lg">
										<svg
											class="h-6 w-6 text-white"
											fill="none"
											stroke="currentColor"
											viewBox="0 0 24 24">
											<path
												stroke-linecap="round"
												stroke-linejoin="round"
												stroke-width="2"
												d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
											></path>
										</svg>
									</div>
									<div>
										<p
											class="leading-relaxed text-slate-700 dark:text-slate-300">
											Los patrones estructurales se ocupan de cómo se componen
											las clases y objetos para formar estructuras más grandes.
											Los patrones estructurales de clases usan la herencia para
											componer interfaces o implementaciones.
										</p>
									</div>
								</div>
								<Separador />

								<article id="links">
									<SeccionListaCopyCode
										title="Patrones estructurales"
										lista={estructurales}
										textKey="titulo"
										copyKey="codigo"
									/>
								</article>
							</CardSecciones>
						</div>
					</div>

					<div class="group relative">
						<div
							class="absolute -inset-1 rounded-3xl bg-gradient-to-r from-emerald-600 to-teal-600 opacity-20 blur transition-opacity group-hover:opacity-30">
						</div>
						<div
							class="hover:shadow-3xl relative rounded-2xl border border-slate-200/50 bg-white/90 p-4 shadow-2xl backdrop-blur-xl transition-all duration-300 dark:border-slate-700/50 dark:bg-slate-800/90 sm:p-6 xl:p-8">
							<CardSecciones
								id={'excepciones'}
								title="Excepciones">
								<div class="mb-6 flex items-start gap-4">
									<div
										class="rounded-xl bg-gradient-to-br from-emerald-500 to-teal-500 p-3 shadow-lg">
										<svg
											class="h-6 w-6 text-white"
											fill="none"
											stroke="currentColor"
											viewBox="0 0 24 24">
											<path
												stroke-linecap="round"
												stroke-linejoin="round"
												stroke-width="2"
												d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"
											></path>
										</svg>
									</div>
									<div class="flex-1">
										<p
											class="mb-4 leading-relaxed text-slate-700 dark:text-slate-300">
											Intro a manejo de errores con excepciones en Java

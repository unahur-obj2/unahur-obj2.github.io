---
import DefaultLayout from '@/layouts/DefaultLayout.astro'
import { Icon } from 'astro-icon/components'
import Git from '../content/data/Git.json'
import patrones from '../content/data/Patrones.json'
import varios from '../content/data/varios.json'
import uml from '../content/data/Uml.json'
import software from '../content/data/Programas.json'

const elementosComunes = await Astro.glob('../content/docs/commandos-git.md')
const { comandosBasicGit } = elementosComunes[0].frontmatter

const comportamientoFile = await Astro.glob(
	'../content/docs/patronesComportamiento.md'
)
const estructuralesFile = await Astro.glob(
	'../content/docs/patronesEstructurales.md'
)

const programasFile = await Astro.glob('../content/docs/programas.md')

const { comportamiento } = comportamientoFile[0].frontmatter
const { estructurales } = estructuralesFile[0].frontmatter
const { programas } = programasFile[0].frontmatter
---

<DefaultLayout
	title="Material - Objetos II"
	description="Universidad Nacional de Hurlingham, material de Programación con Objetos II"
	author="Objetos II">
	<!-- Hero Section -->
	<section
		class="relative overflow-hidden bg-gradient-to-br from-unahur-primary to-unahur-secondary py-16 text-white">
		<!-- Decorative Elements -->
		<div class="absolute inset-0 opacity-10">
			<div
				class="absolute left-10 top-10 h-24 w-24 animate-pulse rounded-full bg-white">
			</div>
			<div
				class="absolute bottom-10 right-10 h-16 w-16 animate-bounce rounded-full bg-unahur-accent">
			</div>
		</div>

		<div class="container relative z-10 mx-auto px-4">
			<div class="mx-auto max-w-4xl text-center">
				<!-- Icon -->
				<div class="mb-6 flex justify-center">
					<div class="rounded-2xl bg-white/20 p-4 backdrop-blur-sm">
						<svg
							class="h-12 w-12 text-white"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24">
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
							></path>
						</svg>
					</div>
				</div>

				<!-- Title -->
				<h1
					class="mb-4 bg-gradient-to-r from-white to-blue-100 bg-clip-text text-4xl font-bold text-transparent md:text-6xl">
					Material
				</h1>

				<!-- Subtitle -->
				<p class="text-lg leading-relaxed text-blue-100 md:text-xl">
					Recursos académicos y documentación técnica para Programación con
					Objetos II
				</p>
			</div>
		</div>
	</section>

	<div
		class="flex min-h-screen flex-col bg-gray-50 dark:bg-gray-900 lg:flex-row">
		<!-- Modern Sidebar -->
		<aside
			class="overflow-y-auto border-r border-gray-200 bg-white shadow-xl dark:border-gray-700 dark:bg-gray-800 lg:sticky lg:top-0 lg:h-screen lg:w-80">
			<div class="p-6">
				<h2
					class="mb-6 flex items-center gap-2 text-xl font-bold text-gray-800 dark:text-white">
					<svg
						class="h-6 w-6 text-unahur-primary"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24">
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
						></path>
					</svg>
					Índice de Contenidos
				</h2>

				<nav class="space-y-4">
					<!-- Patrones de Diseño -->
					<div
						class="overflow-hidden rounded-lg border border-gray-200 dark:border-gray-600">
						<h3
							class="bg-unahur-primary px-4 py-3 text-sm font-semibold text-white">
							Patrones de Diseño
						</h3>
						<div class="space-y-2 p-3">
							{
								patrones.map((patron) => (
									<a
										href={patron.url}
										class="block rounded px-2 py-1 text-sm text-gray-600 transition-colors duration-200 hover:bg-gray-100 hover:text-unahur-primary dark:text-gray-300 dark:hover:bg-gray-700 dark:hover:text-unahur-accent">
										{patron.title}
									</a>
								))
							}
						</div>
					</div>

					<!-- UML -->
					<div
						class="overflow-hidden rounded-lg border border-gray-200 dark:border-gray-600">
						<h3
							class="bg-unahur-secondary px-4 py-3 text-sm font-semibold text-white">
							UML
						</h3>
						<div class="space-y-2 p-3">
							{
								uml.map((item) => (
									<a
										href={item.url}
										class="block rounded px-2 py-1 text-sm text-gray-600 transition-colors duration-200 hover:bg-gray-100 hover:text-unahur-primary dark:text-gray-300 dark:hover:bg-gray-700 dark:hover:text-unahur-accent">
										{item.title}
									</a>
								))
							}
						</div>
					</div>

					<!-- Varios -->
					<div
						class="overflow-hidden rounded-lg border border-gray-200 dark:border-gray-600">
						<h3
							class="bg-unahur-accent px-4 py-3 text-sm font-semibold text-white">
							Varios
						</h3>
						<div class="space-y-2 p-3">
							{
								varios.map((item) => (
									<a
										href={item.url}
										class="block rounded px-2 py-1 text-sm text-gray-600 transition-colors duration-200 hover:bg-gray-100 hover:text-unahur-primary dark:text-gray-300 dark:hover:bg-gray-700 dark:hover:text-unahur-accent">
										{item.title}
									</a>
								))
							}
						</div>
					</div>

					<!-- Git -->
					<div
						class="overflow-hidden rounded-lg border border-gray-200 dark:border-gray-600">
						<h3 class="bg-gray-600 px-4 py-3 text-sm font-semibold text-white">
							Git
						</h3>
						<div class="space-y-2 p-3">
							{
								Git.map((item) => (
									<a
										href={item.url}
										class="block rounded px-2 py-1 text-sm text-gray-600 transition-colors duration-200 hover:bg-gray-100 hover:text-unahur-primary dark:text-gray-300 dark:hover:bg-gray-700 dark:hover:text-unahur-accent">
										{item.title}
									</a>
								))
							}
						</div>
					</div>

					<!-- Programas -->
					<div
						class="overflow-hidden rounded-lg border border-gray-200 dark:border-gray-600">
						<h3 class="bg-green-600 px-4 py-3 text-sm font-semibold text-white">
							Programas
						</h3>
						<div class="space-y-2 p-3">
							{
								software.map((item) => (
									<a
										href={item.url}
										class="block rounded px-2 py-1 text-sm text-gray-600 transition-colors duration-200 hover:bg-gray-100 hover:text-unahur-primary dark:text-gray-300 dark:hover:bg-gray-700 dark:hover:text-unahur-accent">
										{item.title}
									</a>
								))
							}
						</div>
					</div>
				</nav>
			</div>
		</aside>

		<!-- Main Content -->
		<main class="flex-1 p-6 lg:p-8">
			<div class="mx-auto max-w-4xl space-y-8">
				<!-- Patrones de Diseño Section -->
				<section
					id="patrones"
					class="rounded-2xl border border-gray-200 bg-white p-8 shadow-xl dark:border-gray-700 dark:bg-gray-800">
					<div class="mb-6 flex items-center gap-3">
						<div class="rounded-xl bg-unahur-primary p-3 text-white">
							<svg
								class="h-6 w-6"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24">
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
								></path>
							</svg>
						</div>
						<h2
							class="bg-gradient-to-r from-unahur-primary to-unahur-secondary bg-clip-text text-3xl font-bold text-transparent">
							Patrones de Diseño
						</h2>
					</div>

					<div class="prose prose-lg dark:prose-invert max-w-none">
						<p class="mb-6 leading-relaxed text-gray-700 dark:text-gray-300">
							Un patrón de diseño es una <strong
								class="text-unahur-primary dark:text-unahur-accent"
								>solución general y reutilizable</strong
							> para un problema común en el diseño de software. No es un código
							específico que puedas copiar y pegar, sino una plantilla o guía que
							describe cómo resolver un problema de diseño de software de manera
							eficiente y mantenible.
						</p>

						<div
							class="mb-6 rounded-r-lg border-l-4 border-unahur-primary bg-blue-50 p-6 dark:bg-blue-900/20">
							<h3
								class="mb-4 text-lg font-semibold text-unahur-primary dark:text-unahur-accent">
								Características de los patrones de diseño:
							</h3>
							<div class="grid gap-4 md:grid-cols-2">
								<div class="flex items-start gap-3">
									<div
										class="mt-0.5 flex h-6 w-6 flex-shrink-0 items-center justify-center rounded-full bg-unahur-primary text-sm font-bold text-white">
										R
									</div>
									<div>
										<strong>Reutilizable</strong>: Pueden aplicarse en
										diferentes contextos y proyectos
									</div>
								</div>
								<div class="flex items-start gap-3">
									<div
										class="mt-0.5 flex h-6 w-6 flex-shrink-0 items-center justify-center rounded-full bg-unahur-primary text-sm font-bold text-white">
										P
									</div>
									<div>
										<strong>Probado</strong>: Han sido validados y refinados a
										través de su uso en múltiples situaciones
									</div>
								</div>
								<div class="flex items-start gap-3">
									<div
										class="mt-0.5 flex h-6 w-6 flex-shrink-0 items-center justify-center rounded-full bg-unahur-primary text-sm font-bold text-white">
										A
									</div>
									<div>
										<strong>Abstracción</strong>: No son soluciones concretas,
										sino descripciones de cómo resolver un problema
									</div>
								</div>
								<div class="flex items-start gap-3">
									<div
										class="mt-0.5 flex h-6 w-6 flex-shrink-0 items-center justify-center rounded-full bg-unahur-primary text-sm font-bold text-white">
										L
									</div>
									<div>
										<strong>Lenguaje común</strong>: Proporcionan un vocabulario
										compartido entre desarrolladores
									</div>
								</div>
							</div>
						</div>

						<div class="mb-8 grid gap-6 md:grid-cols-3">
							<div
								class="rounded-xl border border-green-200 bg-gradient-to-br from-green-50 to-emerald-50 p-6 dark:border-green-800 dark:from-green-900/20 dark:to-emerald-900/20">
								<h4
									class="mb-3 flex items-center gap-2 font-bold text-green-700 dark:text-green-300">
									<svg
										class="h-5 w-5"
										fill="none"
										stroke="currentColor"
										viewBox="0 0 24 24">
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M12 6v6m0 0v6m0-6h6m-6 0H6"
										></path>
									</svg>
									Creacionales
								</h4>
								<p class="text-sm text-gray-700 dark:text-gray-300">
									Se centran en cómo se crean los objetos. Ayudan a hacer que el
									sistema sea independiente de cómo se crean, componen y
									representan los objetos.
								</p>
							</div>

							<div
								class="rounded-xl border border-blue-200 bg-gradient-to-br from-blue-50 to-indigo-50 p-6 dark:border-blue-800 dark:from-blue-900/20 dark:to-indigo-900/20">
								<h4
									class="mb-3 flex items-center gap-2 font-bold text-blue-700 dark:text-blue-300">
									<svg
										class="h-5 w-5"
										fill="none"
										stroke="currentColor"
										viewBox="0 0 24 24">
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
										></path>
									</svg>
									Estructurales
								</h4>
								<p class="text-sm text-gray-700 dark:text-gray-300">
									Se centran en cómo se componen las clases y objetos para
									formar estructuras más grandes.
								</p>
							</div>

							<div
								class="rounded-xl border border-purple-200 bg-gradient-to-br from-purple-50 to-violet-50 p-6 dark:border-purple-800 dark:from-purple-900/20 dark:to-violet-900/20">
								<h4
									class="mb-3 flex items-center gap-2 font-bold text-purple-700 dark:text-purple-300">
									<svg
										class="h-5 w-5"
										fill="none"
										stroke="currentColor"
										viewBox="0 0 24 24">
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
										></path>
									</svg>
									De Comportamiento
								</h4>
								<p class="text-sm text-gray-700 dark:text-gray-300">
									Se centran en la interacción y distribución de
									responsabilidades entre objetos.
								</p>
							</div>
						</div>

						<div
							class="rounded-r-lg border-l-4 border-amber-400 bg-amber-50 p-6 dark:bg-amber-900/20">
							<h4
								class="mb-3 flex items-center gap-2 font-semibold text-amber-700 dark:text-amber-300">
								<svg
									class="h-5 w-5"
									fill="none"
									stroke="currentColor"
									viewBox="0 0 24 24">
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
									></path>
								</svg>
								📚 Libro de Referencia
							</h4>
							<p class="mb-3 text-sm text-gray-700 dark:text-gray-300">
								Libro Patrones De Diseño - Elementos de software orientado a
								objetos Reutilizable (En Español)
							</p>
							<a
								href="https://info-biblioteca.mincyt.gob.ve/wp-content/uploads/2024/11/Patrones-de-Diseno-Erich-Gamma.pdf"
								target="_blank"
								class="inline-flex items-center gap-2 rounded-lg bg-unahur-primary px-4 py-2 text-white transition-colors duration-300 hover:bg-unahur-secondary">
								<Icon name="ion:arrow-up-right-box-outline" />
								Descargar PDF
							</a>
						</div>
					</div>

					<!-- Patrones Específicos -->
					<div class="mt-8 grid gap-6 md:grid-cols-2">
						<!-- De Comportamiento -->
						<div
							id="comportamiento"
							class="rounded-xl border border-purple-200 bg-gradient-to-br from-purple-50 to-purple-100 p-6 dark:border-purple-700 dark:from-purple-900/20 dark:to-purple-800/20">
							<h3
								class="mb-4 flex items-center gap-2 text-xl font-bold text-purple-700 dark:text-purple-300">
								<svg
									class="h-6 w-6"
									fill="none"
									stroke="currentColor"
									viewBox="0 0 24 24">
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
									></path>
								</svg>
								De Comportamiento
							</h3>
							<div class="space-y-3">
								{
									comportamiento?.map((patron) => (
										<div class="rounded-lg border border-purple-200 bg-white p-4 shadow-sm dark:border-purple-800 dark:bg-gray-800">
											<h4 class="mb-2 font-semibold text-purple-700 dark:text-purple-300">
												{patron.title}
											</h4>
											<p class="mb-3 text-sm text-gray-600 dark:text-gray-300">
												{patron.description}
											</p>
											<div class="flex items-center justify-between">
												<span class="rounded bg-purple-100 px-2 py-1 text-xs text-purple-600 dark:bg-purple-900/30 dark:text-purple-400">
													Pág. {patron.page} del PDF
												</span>
												<button
													onclick={`navigator.clipboard.writeText('${patron.description}')`}
													class="text-purple-600 transition-colors hover:text-purple-800 dark:text-purple-400 dark:hover:text-purple-200">
													<Icon name="ion:copy-outline" />
												</button>
											</div>
										</div>
									))
								}
							</div>
						</div>

						<!-- Estructurales -->
						<div
							id="estructurales"
							class="rounded-xl border border-blue-200 bg-gradient-to-br from-blue-50 to-blue-100 p-6 dark:border-blue-700 dark:from-blue-900/20 dark:to-blue-800/20">
							<h3
								class="mb-4 flex items-center gap-2 text-xl font-bold text-blue-700 dark:text-blue-300">
								<svg
									class="h-6 w-6"
									fill="none"
									stroke="currentColor"
									viewBox="0 0 24 24">
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
									></path>
								</svg>
								Estructurales
							</h3>
							<div class="space-y-3">
								{
									estructurales?.map((patron) => (
										<div class="rounded-lg border border-blue-200 bg-white p-4 shadow-sm dark:border-blue-800 dark:bg-gray-800">
											<h4 class="mb-2 font-semibold text-blue-700 dark:text-blue-300">
												{patron.title}
											</h4>
											<p class="mb-3 text-sm text-gray-600 dark:text-gray-300">
												{patron.description}
											</p>
											<div class="flex items-center justify-between">
												<span class="rounded bg-blue-100 px-2 py-1 text-xs text-blue-600 dark:bg-blue-900/30 dark:text-blue-400">
													Pág. {patron.page} del PDF
												</span>
												<button
													onclick={`navigator.clipboard.writeText('${patron.description}')`}
													class="text-blue-600 transition-colors hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-200">
													<Icon name="ion:copy-outline" />
												</button>
											</div>
										</div>
									))
								}
							</div>
						</div>
					</div>
				</section>

				<!-- UML Section -->
				<section
					id="uml"
					class="rounded-2xl border border-gray-200 bg-white p-8 shadow-xl dark:border-gray-700 dark:bg-gray-800">
					<div class="mb-6 flex items-center gap-3">
						<div class="rounded-xl bg-unahur-secondary p-3 text-white">
							<svg
								class="h-6 w-6"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24">
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
								></path>
							</svg>
						</div>
						<h2
							class="bg-gradient-to-r from-unahur-secondary to-unahur-accent bg-clip-text text-3xl font-bold text-transparent">
							UML (Unified Modeling Language)
						</h2>
					</div>

					<div class="prose prose-lg dark:prose-invert max-w-none">
						<p class="mb-6 leading-relaxed text-gray-700 dark:text-gray-300">
							UML es un <strong
								class="text-unahur-secondary dark:text-unahur-accent"
								>lenguaje o herramienta de comunicación</strong
							> que permite representar un modelo (una idea) del sistema real. Un
							modelo es una abstracción que expresamos a través de los distintos

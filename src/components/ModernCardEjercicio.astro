---
export interface Props {
	title: string
	comentarios?: string
	ejemploUrl?: string
	urlGitHub?: string
	repoUrl?: string
	defaultBranch?: string
	fechaDeEntrega?: string
	obligatorio?: boolean
	consultas?: boolean
}

const {
	title,
	comentarios,
	ejemploUrl,
	urlGitHub,
	repoUrl,
	defaultBranch,
	fechaDeEntrega,
	obligatorio,
	consultas,
} = Astro.props

const alertIcon = `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.464 0L4.35 18.5c-.77.833.192 2.5 1.732 2.5z"/></svg>`
const githubIcon = `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>`
const consultasIcon = `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>`
const linkIcon = `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>`
const calendarIcon = `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>`
---

<div
	class="group flex h-full min-h-[280px] w-full flex-col rounded-xl border border-gray-200 bg-white p-6 shadow-lg transition-all duration-300 hover:scale-[1.02] hover:shadow-xl dark:border-gray-700 dark:bg-gray-800">
	<div class="mb-4 flex flex-shrink-0 flex-wrap gap-2">
		{
			obligatorio && (
				<div class="flex items-center gap-2 rounded-full bg-red-100 px-3 py-1 text-sm font-medium text-red-700 dark:bg-red-900/30 dark:text-red-300">
					<span set:html={alertIcon} />
					Obligatorio
				</div>
			)
		}

		{
			consultas && (
				<div class="flex items-center gap-2 rounded-full bg-blue-100 px-3 py-1 text-sm font-medium text-blue-700 dark:bg-blue-900/30 dark:text-blue-300">
					<span set:html={consultasIcon} />
					Consultas
				</div>
			)
		}
	</div>

	<div class="flex-grow">
		<h3
			class="mb-3 text-xl font-bold text-gray-900 transition-colors duration-200 group-hover:text-unahur-primary dark:text-white">
			{title}
		</h3>

		{
			comentarios && (
				<p class="mb-4 leading-relaxed text-gray-600 dark:text-gray-300">
					{comentarios}
				</p>
			)
		}

		{
			fechaDeEntrega && (
				<div class="mb-4 flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400">
					<span set:html={calendarIcon} />
					<span>Entrega: {fechaDeEntrega}</span>
				</div>
			)
		}
	</div>

	<div class="mt-auto flex flex-shrink-0 flex-wrap gap-3">
		{
			urlGitHub && (
				<a
					href={urlGitHub}
					target="_blank"
					rel="noopener noreferrer"
					class="inline-flex items-center gap-2 rounded-lg bg-unahur-primary px-4 py-2 font-medium text-white transition-all duration-200 hover:scale-105 hover:bg-unahur-secondary hover:shadow-md">
					<span set:html={githubIcon} />
					Ver en GitHub
					<span set:html={linkIcon} />
				</a>
			)
		}

		{
			ejemploUrl && (
				<a
					href={ejemploUrl}
					target="_blank"
					rel="noopener noreferrer"
					class="inline-flex items-center gap-2 rounded-lg bg-gray-100 px-4 py-2 font-medium text-gray-700 transition-all duration-200 hover:scale-105 hover:bg-gray-200 dark:bg-gray-700 dark:text-gray-200 dark:hover:bg-gray-600">
					Ver ejemplo
					<span set:html={linkIcon} />
				</a>
			)
		}

		{
			repoUrl && (
				<a
					href={repoUrl}
					target="_blank"
					rel="noopener noreferrer"
					class="inline-flex items-center gap-2 rounded-lg bg-gray-100 px-4 py-2 font-medium text-gray-700 transition-all duration-200 hover:scale-105 hover:bg-gray-200 dark:bg-gray-700 dark:text-gray-200 dark:hover:bg-gray-600"
					title={`Ir a: ${repoUrl}`}>
					Repositorio
					<span set:html={linkIcon} />
				</a>
			)
		}
	</div>
</div>

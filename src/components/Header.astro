---
import ModernNavigation from '@components/ModernNavigation.astro'
import { SkipLinks } from 'accessible-astro-components'
import ModernDropdown from '@/components/ModernDropdown.astro'

import {
	PATH,
	PATH_CONTRATO_PEDAGOGICO,
	PATH_VIDEOS,
	PATH_MATERIAL,
	PATH_SOLUCIONES,
	PATH_CURSADA_VIERNES,
	PATH_CURSADA2025c1_MIERCOLES,
} from '@/paths'

// Datos para los dropdowns
const cursadaItems = [
	{
		label: 'Comisión 1-3 Viernes',
		href: PATH_CURSADA_VIERNES,
		icon: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>`,
	},
	{
		label: 'Comisión 2-4 Miércoles',
		href: PATH_CURSADA2025c1_MIERCOLES,
		icon: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>`,
	},
]

const utilidadItems = [
	{
		label: 'Material',
		href: PATH_MATERIAL,
		icon: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>`,
	},
	{
		label: 'Videos',
		href: PATH_VIDEOS,
		icon: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/></svg>`,
	},
	{
		label: 'Soluciones',
		href: PATH_SOLUCIONES,
		icon: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>`,
	},
]

// Icono de GitHub
const githubIcon = `<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>`
---

<header>
	<SkipLinks />
	<ModernNavigation>
		<li>
			<a href={PATH}>Inicio</a>
		</li>
		<li>
			<ModernDropdown
				trigger="Cursada"
				items={cursadaItems}
			/>
		</li>
		<li>
			<a href={PATH_CONTRATO_PEDAGOGICO}>Contrato pedagógico</a>
		</li>
		<li>
			<ModernDropdown
				trigger="Utilidad"
				items={utilidadItems}
			/>
		</li>
		<li>
			<a
				href="https://github.com/unahur-obj2/unahur-obj2.github.io"
				target="_blank"
				rel="noopener noreferrer"
				title="Ver repositorio en GitHub"
				class="flex items-center gap-2 rounded-lg p-2 transition-colors duration-200 hover:bg-gray-100 dark:hover:bg-gray-800">
				<span set:html={githubIcon} />
			</a>
		</li>

		<!-- Slot para menú móvil -->
		<Fragment slot="mobile">
			<li>
				<a href={PATH}>Inicio</a>
			</li>
			<li>
				<details class="group">
					<summary
						class="flex cursor-pointer items-center justify-between rounded-lg p-3 hover:bg-gray-100 dark:hover:bg-gray-800">
						<span>Cursada</span>
						<svg
							class="h-4 w-4 transition-transform group-open:rotate-180"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24">
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M19 9l-7 7-7-7"
							></path>
						</svg>
					</summary>
					<div class="space-y-1 pl-4">
						{
							cursadaItems.map((item) => (
								<a
									href={item.href}
									class="block rounded p-2 text-sm hover:bg-gray-100 dark:hover:bg-gray-800">
									{item.label}
								</a>
							))
						}
					</div>
				</details>
			</li>
			<li>
				<a href={PATH_CONTRATO_PEDAGOGICO}>Contrato pedagógico</a>
			</li>
			<li>
				<details class="group">
					<summary
						class="flex cursor-pointer items-center justify-between rounded-lg p-3 hover:bg-gray-100 dark:hover:bg-gray-800">
						<span>Utilidad</span>
						<svg
							class="h-4 w-4 transition-transform group-open:rotate-180"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24">
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M19 9l-7 7-7-7"
							></path>
						</svg>
					</summary>
					<div class="space-y-1 pl-4">
						{
							utilidadItems.map((item) => (
								<a
									href={item.href}
									class="block rounded p-2 text-sm hover:bg-gray-100 dark:hover:bg-gray-800">
									{item.label}
								</a>
							))
						}
					</div>
				</details>
			</li>
			<li>
				<a
					href="https://github.com/unahur-obj2/unahur-obj2.github.io"
					target="_blank"
					rel="noopener noreferrer"
					class="flex items-center gap-3 rounded-lg p-3 hover:bg-gray-100 dark:hover:bg-gray-800">
					<span set:html={githubIcon} />
					<span>GitHub</span>
				</a>
			</li>
		</Fragment>
	</ModernNavigation>
</header>

<style>
	/* Estilos para dropdowns móviles */
	details[open] summary {
		@apply text-unahur-primary;
	}

	details summary::-webkit-details-marker {
		display: none;
	}
</style>

---
import ModernCard from '@/components/ModernCard.astro'

const { frontmatter, url, isLatest = false } = Astro.props
const { title, descripcion, inicio } = frontmatter

let formattedDate = ''
if (inicio) {
	const [year, month, day] = inicio.split('-').map((num) => parseInt(num, 10))
	const date = new Date(year, month - 1, day)
	formattedDate = date.toLocaleDateString('es-ES', {
		day: 'numeric',
		month: 'short',
	})
}

const tags = []
if (frontmatter.videos) tags.push('Videos')
if (frontmatter.ejercicios) tags.push('Ejercicios')
if (frontmatter.horarios) tags.push('Horarios')
---

<ModernCard
	title={title}
	description={descripcion || 'Sin descripciÃ³n disponible'}
	date={formattedDate}
	href={url}
	tags={tags}
	isActive={false}
	isLatest={isLatest}
/>

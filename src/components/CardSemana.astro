---
import ModernCard from '@/components/ModernCard.astro'

const { frontmatter, url } = Astro.props
const { title, descripcion, inicio } = frontmatter

// Formatear la fecha si existe
let formattedDate = ''
if (inicio) {
	const date = new Date(inicio)
	formattedDate = date.toLocaleDateString('es-ES', {
		day: 'numeric',
		month: 'short',
	})
}

// Crear tags basados en qué contenido tiene disponible
const tags = []
if (frontmatter.videos) tags.push('Videos')
if (frontmatter.ejercicios) tags.push('Ejercicios')
if (frontmatter.horarios) tags.push('Horarios')
---

<ModernCard
	title={title}
	description={descripcion || 'Sin descripción disponible'}
	date={formattedDate}
	href={url}
	tags={tags}
	isActive={false}
/>

---
// Componente moderno para tarjetas de soluciones con colores UNAHUR
export interface Props {
	title: string
	urlGitHub: string
	description?: string
}

const { title, urlGitHub, description } = Astro.props

// Iconos SVG
const githubIcon = `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>`
const linkIcon = `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>`
const checkIcon = `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>`
---

<div
	class="group rounded-xl border border-gray-200 bg-white p-6 shadow-lg transition-all duration-300 hover:scale-[1.02] hover:shadow-xl dark:border-gray-700 dark:bg-gray-800">
	<!-- Badge de solución -->
	<div class="mb-4 flex items-center gap-2">
		<div
			class="flex items-center gap-2 rounded-full bg-green-100 px-3 py-1 text-sm font-medium text-green-700 dark:bg-green-900/30 dark:text-green-300">
			<span set:html={checkIcon} />
			Ejercicio Resuelto
		</div>
	</div>

	<!-- Título -->
	<h3
		class="mb-3 text-xl font-bold text-gray-900 transition-colors duration-200 group-hover:text-unahur-primary dark:text-white">
		{title}
	</h3>

	<!-- Descripción -->
	{
		description && (
			<p class="mb-6 leading-relaxed text-gray-600 dark:text-gray-300">
				{description}
			</p>
		)
	}

	<!-- Botón de acción -->
	<div class="flex justify-center">
		<a
			href={urlGitHub}
			target="_blank"
			rel="noopener noreferrer"
			class="inline-flex transform items-center gap-3 rounded-lg bg-gradient-to-r from-unahur-primary to-unahur-secondary px-6 py-3 font-medium text-white transition-all duration-300 hover:scale-105 hover:from-unahur-secondary hover:to-unahur-primary hover:shadow-lg">
			<span set:html={githubIcon} />
			Ver ejercicio resuelto
			<span set:html={linkIcon} />
		</a>
	</div>

	<!-- Efecto decorativo -->
	<div
		class="pointer-events-none absolute inset-0 rounded-xl bg-gradient-to-br from-unahur-primary/5 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100">
	</div>
</div>

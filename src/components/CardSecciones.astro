---
const { id, title = '', atencion = false, importante = false } = Astro.props

const CARD_CSS_ATENCION =
	'bg-gradient-to-br from-red-500/90 to-rose-600/90 backdrop-blur-xl border-red-300/30 shadow-red-500/20'
const CARD_CSS_IMPORTANTE =
	'bg-gradient-to-br from-cyan-500/90 to-blue-600/90 backdrop-blur-xl border-cyan-300/30 shadow-cyan-500/20'
const CARD_CSS_DEFAULT =
	'bg-white/90 dark:bg-slate-800/90 backdrop-blur-xl border-slate-200/50 dark:border-slate-700/50 shadow-slate-500/10'

const cardClass = atencion
	? CARD_CSS_ATENCION
	: importante
	? CARD_CSS_IMPORTANTE
	: CARD_CSS_DEFAULT

const textColorClass =
	atencion || importante ? 'text-white' : 'text-slate-800 dark:text-white'
---

<section
	id={id}
	class={`group relative overflow-hidden rounded-2xl border transition-all duration-500 hover:shadow-2xl hover:scale-[1.01] ${cardClass}`}>
	<div
		class="absolute -inset-0.5 rounded-2xl bg-gradient-to-r from-pink-600 to-purple-600 opacity-0 blur transition-opacity duration-500 group-hover:opacity-20">
	</div>

	<article class="relative z-10 space-y-6 p-8">
		{
			title && (
				<div class="mb-6 flex items-center gap-4">
					<div class="flex-1">
						<h3
							class={`text-2xl font-bold leading-tight tracking-tight ${textColorClass}`}>
							{title}
						</h3>
						<div class="mt-2 h-1 w-16 rounded-full bg-gradient-to-r from-blue-500 to-purple-500" />
					</div>
				</div>
			)
		}

		<div class={`space-y-6 ${textColorClass}`}>
			<slot />
		</div>
	</article>

	<div
		class="absolute right-0 top-0 h-32 w-32 -translate-y-16 translate-x-16 rounded-full bg-gradient-to-br from-white/5 to-transparent transition-transform duration-700 group-hover:scale-110">
	</div>
	<div
		class="absolute bottom-0 left-0 h-24 w-24 -translate-x-12 translate-y-12 rounded-full bg-gradient-to-tr from-white/5 to-transparent transition-transform duration-700 group-hover:scale-110">
	</div>
</section>
